# Production Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/logistics_ai

# Groq Configuration
# Replace 'your_actual_key_here' with your real Groq API key
GROQ_API_KEY=your_actual_key_here
XAI_BASE_URL=https://api.x.ai/v1
GROK_MODEL=grok-beta

# LLM Settings
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4096
LLM_TIMEOUT=60
LLM_MAX_RETRIES=3

# Control Loop Settings
OBSERVATION_INTERVAL=30
MAX_PLANNING_SCENARIOS=5
DECISION_CONFIDENCE_THRESHOLD=0.7

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]

# External APIs (for future integration)
GOOGLE_MAPS_API_KEY=your_google_maps_key_here
HERE_API_KEY=your_here_api_key_here
TRAFFIC_API_URL=https://api.traffic-provider.com/v1

# Production Settings
HEADLESS_MODE=false
CONTINUOUS_LOOP=false
LOG_LEVEL=INFO
LOG_FORMAT=json